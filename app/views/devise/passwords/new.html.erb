<div class="hidden-xs">
  <div class="container">
    <div class="row">
      <div class="col-sm-4">
      </div>

        <div class="col-sm-4">
          <h2 style="text-align: center">Forgot your password?</h2>

          <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
            <%= f.error_notification %>

            <div class="form-inputs">
              <%= f.input :email,
                          required: true,
                          autofocus: true,
                          input_html: { autocomplete: "email" } %>
            </div>

            <div class="form-actions" style="text-align: center">
              <%= f.submit class: 'btn btn-primary', value: "Send me reset password instructions" %>
            </div>
          <% end %>
        </div>

      <div class="col-sm-4">
      </div>
    </div>
  </div>
</div>

<div class="visible-xs">
  <div class="container">
    <div class="row">

      <div class="col-xs-12">
        <h2 style="text-align: center">Forgot your password?</h2>

        <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
          <%= f.error_notification %>

          <div class="form-inputs">
            <%= f.input :email,
                        required: true,
                        autofocus: true,
                        input_html: { autocomplete: "email" } %>
          </div>

          <div class="form-actions" style="text-align: center">
            <%= f.submit class: 'btn btn-primary', value: "Send me reset password instructions" %>
          </div>
        <% end %>
      </div>

    </div>
  </div>
</div>
