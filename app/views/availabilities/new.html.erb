<div class="hidden-xs">
  <div class="container">
    <div class="row">
      <div class="col-sm-3">
      </div>
      <div class="col-sm-6">
        <%= simple_form_for [@user, @availability] do |f| %>
          <%= f.input :start_date, as: :date, html5: true %>
          <%= f.input :end_date, as: :date, html5: true %>
          <%= f.input :price %>
          <div style="text-align: center">
          <%= f.submit class: 'btn btn-primary', value: "Add an availability" %>
          </div>
        <% end %>
      </div>
      <div class="col-sm-3">
      </div>
    </div>
  </div>
</div>

<div class="visible-xs">
  <div class="container">
    <div class="row">
      <div class="col-xs-12">
        <%= simple_form_for [@user, @availability] do |f| %>
          <%= f.input :start_date, as: :date, html5: true %>
          <%= f.input :end_date, as: :date, html5: true %>
          <%= f.input :price %>
          <div style="text-align: center">
          <%= f.submit class: 'btn btn-primary', value: "Add an availability" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>






