<%= simple_form_for [@user, @availability] do |f| %>
    <%= f.input :start_date, as: :date, html5: true %>
    <%= f.input :end_date, as: :date, html5: true %>
    <%= f.input :price %>
    <div style="text-align: center">
    <%= f.submit class: 'btn btn-primary', value: "Add an availability" %>
    </div>
<% end %>
