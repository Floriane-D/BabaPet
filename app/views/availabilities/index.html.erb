<h3>Pet Sitters available:</h3>

<div
  id="map"
  style="width: 100%;
  height: 600px;"
  data-markers="<%= @markers.to_json %>"
  data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
></div>

<div class="container">
  <div class="row">
    <% @availabilities.each do |availability| %>
      <div class="col-xs-12 col-sm-4">
      <%= render 'availability-card', availability: availability %>
      </div>
    <% end %>
  </div>
</div>
