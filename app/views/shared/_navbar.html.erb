<div class="navbar-wagon">
  <!-- Logo -->
  <a href="/" class="navbar-wagon-brand">
    <%= image_tag "logo.jpg" %>
  </a>

  <!-- Right Navigation -->
  <div class="navbar-wagon-right hidden-xs hidden-sm">
    <% if user_signed_in? %>
      <a href="" class="navbar-wagon-item navbar-wagon-link">Pet Sitter</a>
      <a href="" class="navbar-wagon-item navbar-wagon-link">Pet Owner</a>
      <a href="" class="navbar-wagon-item navbar-wagon-link">Messages</a>

      <!-- Profile picture with dropdown list -->
      <div class="navbar-wagon-item">
        <div class="dropdown">
          <div class="avatar dropdown-toggle" id="navbar-wagon-menu" data-toggle="dropdown">
            <%= cl_image_tag current_user.avatar, crop: :fill %>
          </div>
          <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
            <li><%= link_to "Profile", root_path %></li>
            <li><%= link_to 'Logout', destroy_user_session_path, method: :delete if current_user %></li>
          </ul>
        </div>
      </div>
    <% else %>
      <div class="navbar-wagon-item navbar-wagon-link"><%= link_to "Log In", new_user_session_path %></div>
      <div class="navbar-wagon-item navbar-wagon-link"><%= link_to "Sign Up", new_user_registration_path %></div>
    <% end %>
  </div>

  <!-- Dropdown appearing on mobile only -->
  <div class="navbar-wagon-item hidden-md hidden-lg">
    <% if user_signed_in? %>
      <div class="dropdown">
          <div class="avatar dropdown-toggle" id="navbar-wagon-menu" data-toggle="dropdown">
            <%= cl_image_tag current_user.avatar %>
          </div>
        <i class="fas fa-bars dropdown-toggle" data-toggle="dropdown" role="button"></i>
        <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
          <li><a href="#">Pet Sitter</a></li>
          <li><a href="#">Pet Owner</a></li>
          <li><a href="#">Messagese</a></li>
        </ul>
      </div>
    <% else %>
      <a href="" class="navbar-wagon-item navbar-wagon-link">Log In</a>
    <% end %>
  </div>
</div>

